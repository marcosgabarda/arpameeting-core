                <%= link_to (image_tag 'logo_light.png'), '/' %>
            </div>
            <div class="grid_6" style="padding-top:29px; text-align:right;">
                <% if !signed_in? %>
                    <%= link_to 'Sign in', signin_path, :class => "button green" %>
                <% else %>
                    <div id="menunav">
                    <%= link_to 'My Rooms', rooms_path, :class => "button" %>
                    <%= link_to 'New Room', new_room_path, :class => "button" %>
                    <%= link_to 'API', api_docs_path, :class => "button" %>
                    <%= link_to 'Sign out', signout_path, :class => "button blue" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
